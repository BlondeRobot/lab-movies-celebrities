<h2>Add A New Movie Here!</h2>

<form action="/movies/create" method="post">
    <label> Title:
        <input type="text" name="title" />
    </label>

    <label> Genre:
        <input type="text" name="genre" />
    </label>

    <label> Plot:
        <input type="text" name="plot" />
    </label>
//doesn't work, doesn't show list of celebrities
    <label> Cast:
        <select name="cast" id="cast" multiple>
            {{#each returnedCelebrities}}
            <option value="{{this._id}}"> {{this.name}} </option>
            {{/each}}
        </select>
    </label>

    <button type="submit"> Create </button>
</form>