<h2>Edit movie {{movieToEdit.title}}</h2>


<form action="/movies/{{movieToEdit.id}}/edit" method="post">
    <label for="title">title</label>
    <input type="text" name="title" value="{{movieToEdit.title}}" />
    <label for="genre">genre</label>
    <input type="text" name="genre" value="{{movieToEdit.genre}}" />
    <label for="plot">plot</label>
    <input type="text" name="plot" value="{{movieToEdit.plot}}" />


    <label for="cast"></label>
    <input type="checkbox" name="cast" value="{{_id}}" id="cast" />


    <button type="submit">Update Movie</button>
</form>